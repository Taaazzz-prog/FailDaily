{
  "name": "faildaily-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "FailDaily - Application de partage bienveillant d'Ã©checs",
  "engines": { "node": ">=22.11.0" },
  "workspaces": ["frontend", "backend-api"],
  "scripts": {
    "test": "npm run test:all",
    "setup": "npm ci --include=dev",
    "unlock:esbuild": "node scripts/unlock-esbuild.js",
    "ci:safe": "npm run unlock:esbuild && npm ci",
    "ci:nuclear": "rmdir /s /q node_modules 2>nul & npm ci",
    "install:all": "npm ci && npm run install:workspaces",
    "install:workspaces": "npm ci --workspaces",
    "clean:all": "npm run unlock:esbuild && rmdir /s /q node_modules 2>nul && npm run install:all",
    "start:backend": "npm run -w backend-api start",
    "dev:backend": "npm run -w backend-api dev",
    "start:frontend": "npm run -w frontend start",
    "build:frontend": "npm run -w frontend build",
    "test:backend": "npm run -w backend-api test -- --runInBand",
    "lint:backend": "npm run -w backend-api lint",
    "test:frontend": "npm run -w frontend test",
    "lint:frontend": "npm run -w frontend lint",
    "build:all": "npm run build:frontend",
    "test:all": "npm run test:backend",
    "dev:full": "concurrently \"npm run dev:backend\" \"npm run start:frontend\"",
    "smoke:backend": "node -e \"require('./backend-api/server'); console.log('SERVER_BOOT_OK')\"",
    "clean": "rimraf frontend/www frontend/node_modules/.cache backend-api/dist backend-api/node_modules/.cache",
    "test:full": "node scripts/run-full-test.js",
    "deploy:docker": "bash scripts/deploy-docker.sh"
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "rimraf": "^5.0.5"
  },
  "dependencies": {
    "axios": "^1.11.0"
  }
}
